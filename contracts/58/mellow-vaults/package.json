{
  "name": "mellow-contracts-v2",
  "version": "1.0.0",
  "repository": "https://github.com/mellow-finance/mellow-contracts-v2",
  "license": "MIT",
  "scripts": {
    "c": "hardhat compile",
    "compile": "rm -rf artifacts && hardhat compile",
    "deploy:hardhat": "rm -rf artifacts && hardhat --network hardhat deploy",
    "deploy:kovan": "rm -rf artifacts && hardhat --network kovan deploy",
    "deploy:mainnet": "rm -rf artifacts && hardhat --network mainnet deploy",
    "docgen": "node docgen/generate.js",
    "verify:kovan": "rm -rf artifacts && hardhat compile && hardhat --network kovan etherscan-verify",
    "verify:mainnet": "rm -rf artifacts && hardhat compile && hardhat --network mainnet etherscan-verify",
    "export": "hardhat export --export-all ./deployments/contracts.json",
    "test": "hardhat test --config hardhat.test.config.ts",
    "coverage": "rm -rf artifacts && rm -rf test/types && hardhat compile --config hardhat.test.config.ts && hardhat coverage --config hardhat.test.config.ts",
    "size": "rm -rf artifacts && hardhat compile && hardhat size-contracts",
    "prettier": "./node_modules/.bin/prettier -w contracts/**/*.sol test/*.test.ts test/library/*.ts",
    "prettier:check": "./node_modules/.bin/prettier -c contracts/**/*.sol test/*.test.ts test/library/*.ts",
    "clean": "rm -rf artifacts && rm -rf test/types"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^8.0.3",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.21",
    "@types/ramda": "^0.27.44",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.6.6",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "ramda": "^0.27.1",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.2.0",
    "typechain": "^6.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.0",
    "@openzeppelin3/contracts": "npm:@openzeppelin/contracts@3.4.1-solc-0.7-2",
    "@types/dotenv": "^8.2.0",
    "@uniswap/v3-core": "^1.0.0",
    "@uniswap/v3-periphery": "^1.3.0",
    "dotenv": "^10.0.0",
    "solc": "0.8.9",
    "solidity-docgen": "^0.5.16"
  }
}
