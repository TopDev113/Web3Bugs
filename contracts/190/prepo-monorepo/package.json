{
  "name": "prepo-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "workspaces": {
    "packages": [
      "apps/frontend/*",
      "apps/smart-contracts/*",
      "apps/subgraphs/*",
      "packages/*"
    ],
    "nohoist": [
      "**/typechain",
      "**/@typechain/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "build:dry": "npx turbo run build --dry-run=json",
    "changed:ci": "npx ts-node scripts/changedApps.ts $FILTER_BRANCH",
    "dev": "turbo run compile && turbo run dev --parallel",
    "compile": "turbo run compile",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "npx is-ci || npx husky install",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci --since=origin/main",
    "core:test:ci": "turbo run core:test:ci --since=origin/main",
    "token:test:ci": "turbo run token:test:ci --since=origin/main"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@defi-wonderland/smock": "2.3.4",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.0.1",
    "@testing-library/react-hooks": "8.0.0",
    "@testing-library/user-event": "14.1.0",
    "@types/jest": "28.1.2",
    "@types/node": "17.0.23",
    "babel-jest": "28.1.1",
    "esbuild": "0.14.36",
    "esbuild-jest": "0.5.0",
    "eslint": "8.13.0",
    "hardhat-contract-sizer": "2.1.1",
    "hardhat-gas-reporter": "1.0.4",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "28.1.1",
    "lint-staged": "12.3.7",
    "prettier": "2.6.2",
    "solidity-coverage": "0.8.2",
    "ts-jest": "28.0.5",
    "ts-node": "10.8.1",
    "turbo": "1.2.5",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "ethers": "5.6.9",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.2",
    "@nomiclabs/hardhat-ethers": "yarn:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@openzeppelin/hardhat-upgrades": "1.19.0",
    "defender-admin-client": "1.29.1",
    "defender-relay-client": "1.27.1",
    "hardhat": "2.11.0",
    "hardhat-deploy": "0.11.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "./node_modules/@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "resolutions": {
    "@types/react": "17.0.45"
  }
}
