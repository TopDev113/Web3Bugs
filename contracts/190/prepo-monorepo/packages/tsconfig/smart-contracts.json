{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Smart Contracts",
  "exclude": ["node_modules", ".turbo"],
  "extends": "./base.json",
  "include": ["**/*"],
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "noEmit": false,
    "module": "commonjs",
    "sourceMap": true,
    "isolatedModules": false,
    "allowJs": false,
    "strict": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true
  },
  "files": ["./hardhat.config.ts"]
}
