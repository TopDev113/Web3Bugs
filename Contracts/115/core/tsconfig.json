{
  "compilerOptions": {
    "lib": ["ES2018", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "build/",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./hardhat.config.ts", "./scripts", "./deploy", "./test", "./types", "./typechain-types", "./tasks"],
  "exclude": ["./thegraph"],
  "files": ["./hardhat.config.ts"]
}
